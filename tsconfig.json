{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "server/dist"
  },
  "include": ["server/src/**/*.ts"],
  "exclude": ["node_modules"]
}